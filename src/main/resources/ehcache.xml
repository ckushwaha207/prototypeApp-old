<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="com.app.proto.domain.User" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Authority" uses-template="simple"/>

    <cache alias="com.app.proto.domain.User.authorities" uses-template="simple"/>

    <cache alias="com.app.proto.domain.PersistentToken" uses-template="simple"/>

    <cache alias="com.app.proto.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="com.app.proto.social.SocialUserConnection" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Product" uses-template="simple"/>

    <cache alias="com.app.proto.domain.ItemPrice" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Store" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Store.branches" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Store.users" uses-template="simple"/>

    <cache alias="com.app.proto.domain.StoreBranch" uses-template="simple"/>

    <cache alias="com.app.proto.domain.StoreUser" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Location" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Category" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Category.products" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Order" uses-template="simple"/>

    <cache alias="com.app.proto.domain.Order.commerceItems" uses-template="simple"/>

    <cache alias="com.app.proto.domain.CommerceItem" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
